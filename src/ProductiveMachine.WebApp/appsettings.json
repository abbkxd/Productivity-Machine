{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=../data/productive_machine.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApplicationUrl": "https://your-raspberry-pi-hostname",
  "Email": {
    "SmtpServer": "smtp.example.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@example.com",
    "SmtpPassword": "your-password", 
    "SenderEmail": "your-email@example.com",
    "UseSsl": true
  },
  "Backup": {
    "Directory": "../backups",
    "DataDirectory": "../data",
    "RcloneConfigPath": "/etc/rclone/rclone.conf",
    "EncryptBackups": true,
    "UploadToCloud": true,
    "CloudProvider": "googledrive",
    "CloudDirectory": "productive_machine_backups",
    "GPGRecipient": "your-email@example.com",
    "FrequencyHours": 24
  }
} 